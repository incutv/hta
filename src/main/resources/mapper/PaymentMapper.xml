<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.settlementsys.mapper.PaymentMapper">
	<select id="paySelect" parameterType="String" resultType="com.example.settlementsys.dto.Payments">
		select * from Payments where #{settlementDayString} = DATE_SUB(CURDATE(), INTERVAL 1 DAY) and STATUS = 'COMPLETED'
	</select>
</mapper>
